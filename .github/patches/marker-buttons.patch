@@ -120,6 +120,36 @@ defmodule Open890Web.RadioLive do
   # existing code...
 
+  @impl true
+  def handle_event("toggle_marker", %{"color" => color}, socket) do
+    freq_hz = socket.assigns[:current_frequency_hz] || 0
+    markers = socket.assigns[:markers] || []
+
+    present? =
+      Enum.any?(markers, fn m ->
+        c = to_string(m[:color] || m["color"] || "")
+        f = m[:freq_hz] || m["freq_hz"] || 0
+        c == color and abs(f - freq_hz) <= 200
+      end)
+
+    color_code = case color do
+      "r" -> "r"
+      "g" -> "g"
+      "b" -> "b"
+      _ -> "b"
+    end
+
+    if present? do
+      Open890.ConnectionCommands.send_keys(socket.assigns.radio_pid, "c" <> color_code)
+    else
+      Open890.ConnectionCommands.send_keys(socket.assigns.radio_pid, "m" <> color_code)
+    end
+
+    {:noreply, socket}
+  end
+
